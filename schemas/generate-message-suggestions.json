{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "previous_messages": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "author": {
              "type": "string"
            }
          },
          "required": ["text", "author"]
        }
      ]
    },
    "settings": {
      "profile_params": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "age": {
            "type": "integer"
          },
          "pronouns": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "occupation": {
            "type": "string"
          },
          "hobbies": {
            "type": "string"
          },
          "self_description": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "age",
          "pronouns",
          "location",
          "occupation",
          "hobbies",
          "self_description"
        ]
      },
      "conversation_params": {
        "type": "object",
        "properties": {
          "their_name": {
            "type": "string"
          },
          "their_relationship_to_me": {
            "type": "string"
          },
          "tone_of_chat": {
            "type": "string"
          }
        },
        "required": ["their_name", "their_relationship_to_me", "tone_of_chat"]
      },
      "gpt3_params": {
        "type": "object",
        "properties": {
          "engine": {
            "type": "string"
          },
          "n": {
            "type": "integer"
          },
          "temperature": {
            "type": "number"
          },
          "max_tokens": {
            "type": "integer"
          },
          "top_p": {
            "type": "number"
          },
          "best_of": {
            "type": "integer"
          },
          "frequency_penalty": {
            "type": "number"
          },
          "presence_penalty": {
            "type": "number"
          }
        },
        "required": [
          "n",
          "temperature",
          "max_tokens",
          "top_p",
          "best_of",
          "frequency_penalty",
          "presence_penalty"
        ]
      },
      "required": ["profile_params", "conversation_params", "gpt3_params"]
    }
  },
  "required": ["previous_messages", "settings"]
}
